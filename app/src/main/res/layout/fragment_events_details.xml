<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Events_Fragments.events_details">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/event_main_img1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_main_img1"
            android:layout_marginTop="10dp"
            android:text="Title"
            android:textColor="#262626"
            android:textSize="25sp">
        </TextView>

        <TextView
        android:id="@+id/event_descp"
        android:layout_below="@+id/event_title"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:text="Description"
            android:textColor="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/event_descp1"
            android:layout_below="@+id/event_descp"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:text="Description"
            android:textColor="#808080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

         </TextView>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/event_descp1"
            android:id="@+id/event_main_img2"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/event_descp2"
            android:layout_below="@+id/event_main_img2"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:text="Description"
            android:textColor="#808080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <RelativeLayout
            android:layout_below="@+id/event_descp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/radio_flat_selected"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:id="@+id/register_events"
            android:text="       Enroll Yourself      "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toLeftOf="@+id/register_events"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:id="@+id/read_less_events"
            android:text="Read Less..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>